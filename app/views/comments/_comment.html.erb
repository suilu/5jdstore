<div class="comments_wrapper clearfix">
		<div class="pull-left">
			<p class="lead"><%= comment.body %></p>
			<p><small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.email %></small></p>
      <hr>
		</div>

		<div class="pull-right">
			<% if comment.user == current_user -%>
				<%= link_to comment, method: :delete,:class => "btn-sm btn-danger", data: { confirm: 'Are you sure?' } do %><i class="fa fa-trash-o"></i><% end %>
			<% end %>
		</div>
	</div>
